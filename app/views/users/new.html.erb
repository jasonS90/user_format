<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<!-- 회원가입 페이지 -->
<%= form_for @user do |f| %>
  <%= f.text_field :mail %>
  <%= f.text_field :password %>
  <%= f.submit "Sign up" %>
<% end %>

<% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %><br>
    </div>
<% end %>
